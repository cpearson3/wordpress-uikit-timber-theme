{% extends "base.twig" %}

{% block content %}
<div class="uk-container uk-margin-top">
    <div uk-grid>
        <div class="uk-width-2-3@m uk-article">
            {% if title %}
            <h1 class="uk-article-title"><span>{{title}}</span></h1>
            {% endif %}
            {% if posts %}
            {% for post in posts %}
            	{% include 'tease-article.twig' %}
            {% endfor %}
            {% else %}
            <p>No results found.</p>
            {% endif %}
            {% include 'pagination.twig' %}
        </div>
        <aside class="uk-width-1-3@m">
            {% include 'sidebar.twig' %}
        </aside>
    </div>
</div>
{% endblock %}